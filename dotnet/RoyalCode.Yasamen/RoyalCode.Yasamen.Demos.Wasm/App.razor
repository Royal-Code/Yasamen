@using RoyalCode.Yasamen.BlazorShow
<Router AppAssembly="@typeof(App).Assembly" AdditionalAssemblies="new []{ typeof(ICatalog).Assembly }">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(YasamenAppLayout)" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>
