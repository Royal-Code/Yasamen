</Example>

<h3>Alinhamentos</h3>

<Example>

    <h5>Ao início</h5>

    <Container Align="ItemAlign.Start" style="border: 1px solid #ffa6e0; background-color: #f9ceea; min-height:100px;">
        <Column Cols="4">
            <div class="box">Cols 4</div>
        </Column>
        <Column Cols="4">
            <div class="box">Cols 4</div>
        </Column>
        <Column Cols="4">
            <div class="box">Cols 4</div>
        </Column>
    </Container>

    <h5>Ao centro</h5>

    <Container Align="ItemAlign.Center" style="border: 1px solid #ffa6e0; background-color: #f9ceea; min-height:100px;">
        <Column Cols="4">
            <div class="box">Cols 4</div>
        </Column>
        <Column Cols="4">
            <div class="box">Cols 4</div>
        </Column>
        <Column Cols="4">
            <div class="box">Cols 4</div>
        </Column>
    </Container>

    <h5>Ao fim</h5>

    <Container Align="ItemAlign.End" style="border: 1px solid #ffa6e0; background-color: #f9ceea; min-height:100px;">
        <Column Cols="4">
            <div class="box">Cols 4</div>
        </Column>
        <Column Cols="4">
            <div class="box">Cols 4</div>
        </Column>
        <Column Cols="4">
            <div class="box">Cols 4</div>
        </Column>
    </Container>

    <h5>Alinhamento nas colunas</h5>

    <Container style="border: 1px solid #ffa6e0; background-color: #f9ceea; min-height:100px;">
        <Column Cols="4" Align="SelfAlign.Start">
            <div class="box">Cols 4</div>
        </Column>
        <Column Cols="4" Align="SelfAlign.Center">
            <div class="box">Cols 4</div>
        </Column>
        <Column Cols="4" Align="SelfAlign.End">
            <div class="box">Cols 4</div>
        </Column>
    </Container>

</Example>

