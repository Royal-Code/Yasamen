
@page "/Containers"

<h1>Containers and Columns</h1>

<h3>Exemplo básico</h3>

<Example>

    <h5>Três colunas de tamanho 4, completando 12, uma linha.</h5>

    <Container style="border: 1px solid #ffa6e0; background-color: #f9ceea;">
        <Column Cols="4">
            <div class="box">Cols 4</div>
        </Column>
        <Column Cols="4">
            <div class="box">Cols 4</div>
        </Column>
        <Column Cols="4">
            <div class="box">Cols 4</div>
        </Column>
    </Container>

