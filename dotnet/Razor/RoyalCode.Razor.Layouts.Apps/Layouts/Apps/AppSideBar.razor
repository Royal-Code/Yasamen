
<aside @attributes="AdditionalAttributes" class="@Classes" @ref="AsideReference">
    @ChildContent
</aside>

@code {
    public string Classes => "ya-side-bar"
        .AddClass(Size.ToWidthCssClass())
        .AddClass(Size.ToMinWidthCssClass())
        .AddClass(AdditionalClasses);

    public ElementReference AsideReference { get; private set; }

    [Parameter, EditorRequired]
    public SpacingSize Size { get; set; } = SpacingSize.LargerX2;

    [Parameter, EditorRequired]
    public Positions Position { get; set; } = Positions.End;

    [Parameter]
	public RenderFragment ChildContent { get; set; } = null!;

    /// <summary>
    /// Additional CSS classes to apply to the container for custom styling.
    /// </summary>
    [Parameter]
    public string? AdditionalClasses { get; set; }

    /// <summary>
    /// Additional attributes that will be applied to the container's outermost HTML element.
    /// </summary>
    [Parameter(CaptureUnmatchedValues = true)]
    public IDictionary<string, object>? AdditionalAttributes { get; set; }

    protected override void OnParametersSet()
    {
        if (Position is not Positions.End && Position is not Positions.Start)
        {
            throw new ArgumentOutOfRangeException(nameof(Position), "AppSideBar Position must be Start or End.");
		}
    }
}
