@page "/demo/forms/text-field"

@layout AppMainLayout

<Box AdditionalClasses="p-8 bg-white border-none">

	<h1>TextField</h1>

	<p class="mb-4">Campos de texto com estilos baseados em Bootstrap, usando Tailwind. Exemplos de uso e estados.</p>

	<h2>Simples</h2>

	<EditForm Model="this">
		<TextField Label="Nome" @bind-Value="_name" Placeholder="Digite seu nome" />
	</EditForm>

	<h2>Com informação</h2>

	<EditForm Model="this">
		<TextField Label="Usuário" @bind-Value="_user" Placeholder="usuário" />
	</EditForm>

	<h2>Com prepend e append</h2>

	<EditForm Model="this">
		<TextField Label="Site" @bind-Value="_site" Placeholder="meusite">
			<Prepend>
				<FieldText>https://</FieldText>
			</Prepend>
			<Append>
				<FieldText>.com</FieldText>
			</Append>
		</TextField>
	</EditForm>

	<h2>Estado: Normal</h2>

	<EditForm Model="this">
		<Container>
			<Col>
				<TextField Label="Smallest g" Size="Sizes.Smallest" @bind-Value="_stateNormal" Placeholder="normal" />
			</Col>
			<Col>
				<TextField Label="Smaller g" Size="Sizes.Smaller" @bind-Value="_stateNormal" Placeholder="normal" />
			</Col>
			<Col>
				<TextField Label="Small g" Size="Sizes.Small" @bind-Value="_stateNormal" Placeholder="normal" />
			</Col>
			<Col>
				<TextField Label="Medium g" Size="Sizes.Medium" @bind-Value="_stateNormal" Placeholder="normal" />
			</Col>
			<Col>
				<TextField Label="Large" Size="Sizes.Large" @bind-Value="_stateNormal" Placeholder="normal" />
			</Col>
			<Col>
				<TextField Label="Larger" Size="Sizes.Larger" @bind-Value="_stateNormal" Placeholder="normal" />
			</Col>
			<Col>
				<TextField Label="Largest" Size="Sizes.Largest" @bind-Value="_stateNormal" Placeholder="normal" />
			</Col>
		</Container>
	</EditForm>

