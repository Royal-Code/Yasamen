
@page "/offcanvas"

<div>
    
    <h3>Off Canvas Sample</h3>

    <OffCanvas Handler="handler1" style="width: 400px;" AdditionalClasses="p-3" 
               Fitting="(overlaying ? Fitting.Overlaying : Fitting.Incorporated)"
               Modal="modal" Closeable="closeable">
        Olá Off Canvas !!!
    </OffCanvas>

    <OffCanvas Handler="handler2"
               Fitting="Fitting.Float"
               Modal="modal"
               UseBox="true"
               Title="Off Canvas Aside Box">

        <span>
            Olá Off Canvas and Aside Box !!!
        </span>
        
        <div class="m-2">
            <div style="height: @Value; width: 100px; border: 1px solid blue;"></div>
        </div>
    </OffCanvas>

    <div class="my-2">
        <input type="checkbox" @bind="modal"/> 
        <span>Modal</span>
    </div>
    
    <div class="my-2">
        <input type="checkbox" @bind="overlaying"/> 
        <span>Overlaying</span>
    </div>

    <div class="my-2">
        <input type="checkbox" @bind="closeable" />
        <span>Closeable</span>
    </div>
    
    <button class="btn btn-primary" @onclick="async () => await handler1.Toggle()">
        Open Off Canvas 1
    </button>

    <button class="btn btn-primary" @onclick="async () => await handler2.Toggle()">
        Open Off Canvas 2

        

    </button>
    
    <div class="m-2">
        <input name="height" @bind="Value" />
    </div>

    <div style="height: @Value; width: 100px; border: 1px solid red;"></div>

</div>

@code {
    private readonly OffCanvasHandler handler1 = new();
    private readonly OffCanvasHandler handler2 = new();

    private bool overlaying;
    private bool modal;
    private bool closeable;

    public string Value { get; set; } = "100px";
}