
<footer class="@Classes" @attributes="AdditionalAttributes" @ref="footerRef">
    @ChildContent
</footer>

@code {

    private CssClassMap Classes => CssClassMap.Create("app-footer", LayouContext.GetInteractedCssClass())
        .Add(AdditionalClasses);

    private ElementReference footerRef;

    [Parameter]
    public RenderFragment ChildContent { get; set; }
    
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object> AdditionalAttributes { get; set; }

    [Parameter]
    public string AdditionalClasses { get; set; }

    [CascadingParameter]
    public LayoutContext LayouContext { get; set; }
}
